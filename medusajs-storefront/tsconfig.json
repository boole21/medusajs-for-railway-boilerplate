{
  "compilerOptions": {
    "allowUnusedLabels": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["cypress"],
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "cypress/support/index.js",
    "cypress/support/commands.js",
    "cypress/integration/product.spec.js",
    "cypress/plugins/index.js",
    ".next/types/**/*.ts",
    "script/awaitBackendReady.js"
, "src/app/[countryCode]/(main)/page.tsx==", "src/modules/layout/components/cart-dropdown/index.tsx==", "src/modules/layout/components/side-menu/index.tsx===", "src/modules/layout/templates/nav/index.tsx==="  ],
  "exclude": [
    "node_modules",
    ".next",
    ".nyc_output",
    "cypress-coverage",
    "coverage",
    "jest-coverage"
  ]
}